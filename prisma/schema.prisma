generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id
  sessions  Session[]
  discordId String
  username  String
  avatar    String?
  apiKeys   ApiKey[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model ApiKey {
  id        String   @id
  userId    String
  key       String
  createdAt DateTime @default(now())
  expiresAt DateTime
  used      Boolean  @default(false)
  disabled  Boolean  @default(false)

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}
